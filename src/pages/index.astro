---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="estudiando astro.">
	<main>
		<body>
			<div class="superior">
				<h1>Estudiando Astro</h1>
				<button class="bo">
					<a href="https://desde0.jesusdmedinac.com/" target="_blank"><img src="logorobadodelprofe.jpg" alt="logorobado" width="15" height="15"></a>
				</button>
			</div>
		</body>
	</main>
	</Layout>
	
	<style>
		main {
			margin: auto;
			padding: 1rem;
			width: 800px;
			max-width: calc(100% - 2rem);
			color: rgb(0, 0, 0);
			line-height: 1.6;
		}
	
		h1 {
			text-align: center;
			font-size: medium;
		}
	
		.bo {
			background-color: transparent;
			border-color: transparent;
			float: right;
		}
	
		.superior {
			width: auto; 
			background-color: #fafdff;
			border: 1px solid #000000; 
			color: rgb(0, 0, 0); 
			margin-top: auto;
			margin: auto;
			position: relative;
			border-radius: 8px;
		}
		.superior button.bo {
			position: absolute; 
			top: 15px;
			right: 85px;
		}

	</style>
	